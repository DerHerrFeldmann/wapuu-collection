---
title: Wapuugotchi collection
permalink: /collection/
meta: [name,author,description,published,license]
---
{
    {% for collection in site.collections %}{% unless collection.label == "posts" %}"{{ collection.label }}":{
        {% for item in collection.docs %}"{{ item.slug }}": {
            "meta": { {% for var in page.meta %}
                "{{ var }}": "{{ item[var] }}"{% unless forloop.last %},{% endunless %}{% endfor %}
            },
            "image": "{{ item.url  | absolute_url | replace: "meta.html", "image.svg" }}",
            "preview": "{{ item.url  | absolute_url | replace: "meta.html", "preview.png" }}"
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    }{% unless forloop.last %},
    {% endunless %}{% endunless %}{% endfor %}
}